<odoo>
    <!-- Acción -->
    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Ofertas de Propiedades</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Vista de lista -->
    <record id="estate_property_offer_view_list" model="ir.ui.view">
        <field name="name">estate.property.offer.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list>
                <field name="property_id" options="{'no_create': True}"/>
                <field name="partner_id" string="Cliente" colspan="2"/>
                <field name="date_deadline" string="Fecha de Caducidad" colspan="2"/>
                <field name="validity" string="Validez" colspan="1"/>
                <field name="price" string="Precio" colspan="1"/>
                <button name="action_accept" type="object" string="Aceptar" icon="fa-check" class="btn btn-success"/>
                <button name="action_refuse" type="object" string="Rechazar" icon="fa-times" class="btn btn-danger"/>
                <field name="status" string="Estado" colspan="1"/>
            </list>
        </field>
    </record>

    <!-- Vista de formulario -->
    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="property_id" options="{'no_create': True}" required="1"/>
                        <field name="partner_id" widget="selection" options="{'no_create': True}" colspan="2"/>
                        <field name="date_deadline" string="Fecha de Caducidad" colspan="1"/>
                        <field name="validity" string="Validez" colspan="1"/>
                        <field name="price" colspan="1"/>
                        <button name="action_accept" type="object" class="btn btn-success"/>
                        <button name="action_refuse" type="object" class="btn btn-danger"/>
                        <field name="status" colspan="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Búsqueda y Filtros -->
    <record id="estate_property_offer_view_search_filter" model="ir.ui.view">
        <field name="name">estate.property.offer.view.search.filter</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <search>
                <field name="property_id"/>
                <field name="partner_id" colspan="2"/>
                <field name="date_deadline" colspan="1"/>
                <field name="validity" colspan="1"/>
                <field name="price" colspan="1"/>
                <field name="status" colspan="1"/>
            </search>
        </field>
    </record>
</odoo>
