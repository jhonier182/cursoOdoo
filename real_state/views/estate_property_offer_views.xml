<odoo>
    <!-- Action -->
    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Ofertas de Propiedades</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Vista de lista -->
    <record id="estate_property_offer_view_list" model="ir.ui.view">
        <field name="name">estate.property.offer.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list>
                <field name="price" string="Precio"/>
                <field name="partner_id" string="Cliente" widget="selection" options="{'no_create': True}"/>
                <field name="status" string="Estado"/>
                <field name="property_id" string="Propiedad" widget="selection" options="{'no_create': True}"/>
            </list>
        </field>
    </record>

    <!-- Vista de formulario -->
    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id" widget="selection" options="{'no_create': True}"/>
                        <field name="status"/>
                        <field name="property_id" widget="selection" options="{'no_create': True}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- BÃºsqueda y Filtros -->
    <record id="estate_property_offer_view_search_filter" model="ir.ui.view">
        <field name="name">estate.property.offer.view.search.filter</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <search>
                <field name="price"/>
                <field name="partner_id"/>
                <field name="status"/>
                <field name="property_id"/>
            </search>
        </field>
    </record>
</odoo>
